{
  "name": "metaverse",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:frontend && npm run build:http && npm run build:ws",
    "build:frontend": "cd frontend && npm run build",
    "build:http": "cd http && npm run build",
    "build:ws": "cd ws && npm run build",
    "dev": "concurrently \"npm run dev:http\" \"npm run dev:ws\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:http": "cd http && npm run dev",
    "dev:ws": "cd ws && npm run dev",
    "start": "concurrently \"npm run start:http\" \"npm run start:ws\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm run preview",
    "start:http": "cd http && npm run start",
    "start:ws": "cd ws && npm run start",
    "lint": "npm run lint:frontend && npm run lint:http && npm run lint:ws",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:http": "cd http && npm run lint",
    "lint:ws": "cd ws && npm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/ws": "^8.5.12",
    "cors": "^2.8.5",
    "esbuild": "^0.24.0",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^20.11.24",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^8.2.2",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "prettier": "^3.2.5",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10"
  },
  "engines": {
    "node": ">=18"
  }
}